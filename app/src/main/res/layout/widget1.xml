<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#555555"
    android:paddingVertical="5dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/updateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/updateTime"
            android:textSize="10sp"
            android:textColor="@color/white"
            tools:ignore="SmallSp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tips"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:ignore="SmallSp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/districtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/district"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/today_tem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/temp_example"
                android:textColor="@color/white"
                android:textSize="60sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/tomorrow"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/tomorrowImg"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cloud"
                android:contentDescription="@string/tomorrow" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tomorrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temp_example"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/tomorrowDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center"
                    android:text="@string/tomorrow"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"  />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/overmorrow"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <ImageView
                android:id="@+id/overmorrowImg"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_cloud"
                android:contentDescription="@string/overmorrow" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/overmorrow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/temp_example"
                    android:textColor="@color/white"
                    android:textSize="22sp" />
                <TextView
                    android:id="@+id/overmorrowDescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top|center"
                    android:text="@string/overmorrow"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    tools:ignore="SmallSp"  />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/today_other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/other_info"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:typeface="monospace"
        tools:ignore="SmallSp" />

</LinearLayout>